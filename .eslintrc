{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["react-app", "prettier"], // add prettier here will turn off any eslint rules in conflict
  "plugins": ["react", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    // "semi": "error",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "trailingComma": "es5",
        "semi": true,
        "jsxSingleQuote": true,
        "singleQuote": true,
        "useTabs": true
      }
    ]
  }
}
